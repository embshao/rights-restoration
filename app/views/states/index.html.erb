<section class="slab slab--white">
  <div class="grid">
    <div class="grid__item width-three-fourths shift-one-eighth">
      <h1 class="form-question">
        What state do you live in?
      </h1>

      <select name="state">
        <% State.all.map do |state| %>
          <option value=<%= state.abbreviation %>><%= state.name %></option>
        <% end %>
      </select>

      <%= form_with url: "/states", method: :post do |form| %>
        <%= form.text_field :id %>
        <%= form.submit "Search" %>
      <% end %>

      <div class="spacing-above-60">
        <%= link_to "Continue", root_path, class: "button button--primary button--wide text--centered" %>
      </div>
    </div>
  </div>
</section>

