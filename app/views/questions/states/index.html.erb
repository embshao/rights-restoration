<% content_for :page_title do %>
  <%= t(".title") %>
<% end %>

<% content_for :card do %>
  <div class="form-card__header">
    <h1 class="form-card__title"><%= t(".card_question") %></h1>
  </div>
  <%= form_with url: states_path, method: :post do |form| %>
    <div class="select">
      <% states_array = State.all.map { |state| [state.name, state.id] } %>
      <%= select_tag :state, options_for_select(states_array), class: "select__element" %>
    </div>

    <div class="spacing-above-35">
      <%= form.submit "Continue", class: "button button--primary button--wide text--centered" %>
    </div>
  <% end %>
<% end %>